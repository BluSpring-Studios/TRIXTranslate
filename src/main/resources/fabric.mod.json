{
    "schemaVersion": 1,
    "id": "unitytranslate",
    "version": "${mod_version}",
    "name": "TRIXTranslate",
    "description": "A mod designed for free live translation, inspired by the QSMP. Mainly created for the Unity Multiplayer server, and for public release towards the multilingual Minecraft community. Modified for usage by TRIX Studios.",
    "authors": [
        "BluSpring"
    ],
    "contact": {
        "sources": "https://github.com/BluSpring/UnityTranslate",
        "issues": "https://github.com/BluSpring/UnityTranslate/issues"
    },
    "license": "MIT",
    "icon": "icon.png",
    "environment": "*",
    "entrypoints": {
        "client": [
            "xyz.bluspring.unitytranslate.fabric.client.UnityTranslateFabricClient"
        ],
        "main": [
            "xyz.bluspring.unitytranslate.fabric.UnityTranslateFabric"
        ],
        "modmenu": [
            "xyz.bluspring.unitytranslate.fabric.compat.modmenu.UTModMenuIntegration"
        ],
        "voicechat": [
            "xyz.bluspring.unitytranslate.compat.voicechat.SimpleVoiceChatCompat"
        ]
    },
    "mixins": [
        "unitytranslate.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${loader_version}",
        "minecraft": "${mc_version}",
        "fabric-language-kotlin": ">=${fabric_kotlin_version}",
        "architectury": ">=${architectury_version}"
    },
    "recommends": {
        "voicechat": "*"
    },
    "suggests": {
        "talk_balloons": "*"
    }
}
